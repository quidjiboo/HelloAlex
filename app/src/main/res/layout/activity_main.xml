<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.akov.helloalex.MainActivity">

    <LinearLayout
        android:id="@+id/verf"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seredina"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:id="@+id/OnclickMy_test"
            android:onClick="OnclickMy_test" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewAcc"
            android:id="@+id/button_my_new_acc"
            android:onClick="button_my_new_acc"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/button_my_Logout"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:onClick="button_my" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/seredina"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/niz"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <ListView
            android:id="@+id/listViewAkov"
            android:layout_width="match_parent"
            android:layout_height="383dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/niz" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/niz"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionSend"/>

        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:onClick="OnclickMy" />

    </LinearLayout>


</RelativeLayout>
