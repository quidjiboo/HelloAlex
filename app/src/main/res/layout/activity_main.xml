<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="ru.akov.helloalex.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/verf1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/verf"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textView_my" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/verf"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seredina"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0"
        >

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:id="@+id/OnclickMy_test"
            android:onClick="OnclickMy_test"
            android:layout_weight="0"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NewAcc"
            android:id="@+id/button_my_new_acc"
            android:onClick="button_my_new_acc"
            android:layout_weight="0"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/button_my_Logout"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="button_my"
            android:layout_weight="0"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/button_my_next"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="next_scr"
            android:layout_weight="0"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/seredina"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/niz"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="4"
        >
        <ListView
            android:id="@+id/listViewAkov"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="4"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/niz"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0" >

        <EditText
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:lines="1"
            android:singleLine="true"
            android:imeOptions="actionSend"/>
        android:layout_weight="0" >
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_send"
            android:onClick="OnclickMy"
            android:layout_weight="0"
            />


    </LinearLayout>


</LinearLayout>
