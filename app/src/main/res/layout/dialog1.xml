<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.akov.helloalex.MainActivity">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"



            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/password_section">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Name"
            android:ems="10"
            android:hint="Your Name"
            android:paddingTop="20dp"
            style="@style/FirebaseEditTextTheme"
            android:theme="@style/FirebaseEditTextTheme"
            android:inputType="text" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_my"
                android:ems="10"
                android:hint="Email"
                android:paddingTop="20dp"
                style="@style/FirebaseEditTextTheme"
                android:theme="@style/FirebaseEditTextTheme"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password1"
                android:ems="10"
                android:hint="Password"
                android:paddingTop="16dp"
                style="@style/FirebaseEditTextTheme"
                android:theme="@style/FirebaseEditTextTheme"
                android:inputType="textPassword" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password2"
            android:ems="10"
            android:hint="repeet_Password"
            android:paddingTop="16dp"
            style="@style/FirebaseEditTextTheme"
            android:theme="@style/FirebaseEditTextTheme"
            android:inputType="textPassword" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:id="@+id/password_button"
                android:textColor="#ffffff"
                android:typeface="normal"
                android:layout_marginTop="10dp"
                android:background="@drawable/password_button"
                android:textStyle="bold"
              />


    </LinearLayout>

<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:id="@+id/loading_section">

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progressBar"
    android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button_ok"
        android:textColor="#ffffff"
        android:typeface="normal"
        android:background="@drawable/password_button"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>

</RelativeLayout>
